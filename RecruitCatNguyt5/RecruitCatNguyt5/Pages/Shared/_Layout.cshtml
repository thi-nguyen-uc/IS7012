<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RecruitCat</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
            background-color: #ffffff; /* keep background white */
        }

        body {
            display: flex;
            flex-direction: column;
            padding-top: 70px; /* space for fixed navbar */
            color: #1a3d3d;
            font-family: 'Segoe UI', sans-serif;
        }

        .content-wrapper {
            flex: 1;
        }

        /* Darker blueish-green navbar */
        .navbar {
            background-color: #117864; /* darker shade for header */
        }

            .navbar .navbar-brand,
            .navbar .nav-link {
                color: #ffffff; /* white text */
                font-size: 1.5rem;
            }

                .navbar .nav-link:hover {
                    color: #a3e4d7; /* lighter hover color */
                }

        /* Theme buttons */
        .btn-theme {
            background-color: #1ABC9C;
            color: #ffffff;
            border: none;
        }

            .btn-theme:hover {
                background-color: #16a085;
            }

        /* Headings */
        h1, h2, h3 {
            color: #117864; /* headings in darker blueish-green */
        }

        a {
            color: #1ABC9C;
        }

            a:hover {
                color: #117864;
                text-decoration: none;
            }

        .footer {
            background: #f8f9fa;
            padding: 20px 0;
            text-align: center;
            border-top: 1px solid #e0e0e0;
        }

        .btn-apply {
            background-color: #e67e22; /* orange */
            color: #fff;
            border: none;
        }

        .btn-apply:hover {
             background-color: #ca6f1e; /* darker orange */
             color: #fff;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="/">RecruitCat</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/OurTeam">Our Team</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="content-wrapper container">
        @RenderBody()
    </div>

    <footer class="footer mt-auto py-4 bg-light">
        <div class="container text-center">
            <p><b></>RecruitCat, Inc.</b></p>
            <p>1234 Innovation Drive, San Francisco, CA 94105</p>
            <p>Phone: (555) 123-4567</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
